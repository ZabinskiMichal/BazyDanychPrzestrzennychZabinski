create schema zad5


--Utwórz tabelę obiekty. W tabeli umieść nazwy i geometrie obiektów przedstawionych poniżej. 
--Układ odniesieniaustal jako niezdefiniowany. 
--Definicja geometrii powinna odbyć się za pomocą typów złożonych, właściwych dla EWKT.

--id, nazwa, geometria
DROP TABLE zad5.obiekty

CREATE TABLE zad5.obiekty(
	id_obiektu SERIAL PRIMARY KEY,
	nazwa VARCHAR(50) NOT NULL,
	geom geometry NOT NULL
)

--obiekt1
--ok
INSERT INTO zad5.obiekty VALUES(DEFAULT, 'obiekt1', ST_GeomFromText('CompoundCurve((0 1 , 1 1), CircularString(1 1, 2 0, 3 1, 4 2, 5 1), (5 1, 6 1))'))


--obiekt2
--ok
INSERT INTO zad5.obiekty VALUES (DEFAULT, 'obiekt2', ST_GeomFromText('CurvePolygon(CompoundCurve((10 6, 14 6), CircularString(14 6, 16 4, 14 2, 12 0, 10 2), (10 2, 10 6)), CircularString(11 2, 13 2, 11 2))'))




--obiekt3
--ok
INSERT INTO zad5.obiekty VALUES (DEFAULT, 'obiekt3', ST_GeomFromText
('CompoundCurve((7 15, 10 17), (10 17, 12 13), (12 13, 7 15))'))




--obiekt4
--podajemy jako akrumenty poszczegolne linie
--ok
INSERT INTO zad5.obiekty VALUES (DEFAULT, 'obiekt4', ST_GeomFromText('CompoundCurve((20 20, 25 25), (25 25, 27 24), (27 24, 25 22), (25 22, 26 21), (26 21, 22 19), (22 19, 20.5 19.5))'))

SELECT * FROM zad5.obiekty

--obiekt 5
--ok
INSERT INTO zad5.obiekty VALUES (DEFAULT, 'obiekt5', ST_GeomFromText('MultiPoint(30 30 59, 38 32 234)'))


--obiekt 6
--ok
INSERT INTO zad5.obiekty VALUES (DEFAULT, 'obiekt6', St_GeomFromText('GeometryCollection(LINESTRING(1 1, 3 2),Point(4 2))'))

--1. Wyznacz pole powierzchni bufora o wielkości 5 jednostek, 
--który został utworzony wokół najkrótszej linii łączącej obiekt 3 i 4.
--ok
SELECT ST_Area(ST_Buffer((ST_ShortestLine((SELECT geom FROM zad5.obiekty WHERE nazwa = 'obiekt3'),
(SELECT geom FROM zad5.obiekty WHERE nazwa = 'obiekt4'))), 5)) 

--zad2
--Zamień obiekt4 na poligon. Jaki warunek musi być spełniony, aby można było wykonać to zadanie? 
--Zapewnij te warunki.

--trzeba najpierw domknac na obiekt
--oraz skorzystac z funkcjiCurvePolygon

--ok
UPDATE zad5.obiekty SET geom = ST_GeomFromText('CurvePolygon(CompoundCurve((20 20, 25 25), (25 25, 27 24), (27 24, 25 22), (25 22, 26 21), (26 21, 22 19), (22 19, 20.5 19.5), (20.5 19.5, 20 20)))')
WHERE nazwa = 'obiekt4'

--zad3
--W tabeli obiekty, jako obiekt7 zapisz obiekt złożony z obiektu 3 i obiektu 4.
--funckcja st_colelect przyjmyje dwie geometrie i zwaraca geometry collection
--ok
INSERT INTO zad5.obiekty VALUES (DEFAULT, 'obiekt 4', ST_Collect((SELECT geom FROM zad5.obiekty WHERE nazwa = 'obiekt3'
),(SELECT geom FROM zad5.obiekty WHERE nazwa = 'obiekt4'
)))


SELECT geom FROM zad5.obiekty WHERE nazwa = 'obiekt3'
SELECT geom FROM zad5.obiekty WHERE nazwa = 'obiekt4'
--ok
--zad4
--Wyznacz pole powierzchni wszystkich buforów o wielkości 5 jednostek, 
--które zostały utworzone wokół obiektów nie zawierających łuków.

--St_HasArc zwraca true gdy obiekt zawiera circular string
SELECT SUM (ST_Area(ST_Buffer((geom), 5))) FROM zad5.obiekty WHERE NOT St_HasArc(geom)












